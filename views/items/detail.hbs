<div class="max-w-3xl">
  <div class="mb-4">
    <a href="/" class="text-sm text-blue-600 hover:underline">&larr; Back to list</a>
  </div>

  <div class="bg-white rounded-lg shadow-sm border p-6">
    <div class="flex items-center gap-3 mb-4">
      <span class="text-sm font-medium bg-blue-100 text-blue-800 px-3 py-1 rounded">{{item.type}}</span>
      <h1 class="text-2xl font-bold text-gray-900">{{item.name}}</h1>
    </div>

    <p class="text-gray-600 mb-6">{{item.description}}</p>

    {{#if item.installCommand}}
    <div class="mb-6 bg-gray-900 text-green-400 rounded-lg p-4 flex items-center justify-between">
      <code class="text-sm">{{item.installCommand}}</code>
      <button onclick="navigator.clipboard.writeText('{{item.installCommand}}')"
        class="ml-4 text-xs bg-gray-700 hover:bg-gray-600 text-white px-3 py-1 rounded">
        Copy
      </button>
    </div>
    {{/if}}

    <div class="prose max-w-none">
      <!-- TODO: Render detailDescription as Markdown HTML -->
      <p class="text-gray-500 italic">Detail description will be rendered here.</p>
    </div>
  </div>
</div>
