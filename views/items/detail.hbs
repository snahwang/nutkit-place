<div class="mb-5">
  <a href="/" class="text-sm text-slate-300 hover:text-white">&larr; back</a>
</div>

<div class="rounded-2xl bg-white/5 border border-white/10 p-6 shadow-card max-w-4xl">
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0">
      <div class="flex items-center gap-2">
        <span class="text-[11px] font-semibold tracking-wide uppercase px-2 py-1 rounded-full bg-white/5 border border-white/10 text-slate-300">{{item.type}}</span>
        <span class="text-xs text-slate-500">â˜… {{item.starCount}}</span>
      </div>
      <h1 class="mt-3 text-2xl font-bold tracking-tight">{{item.name}}</h1>
      <p class="mt-2 text-slate-400">{{item.description}}</p>
    </div>

    <a href="/items/{{item.itemId}}/edit" class="px-4 py-2 rounded-xl bg-white/5 border border-white/10 text-sm text-slate-200 hover:border-accent-600/50">edit</a>
  </div>

  <div class="mt-6 border-t border-white/10 pt-6">
    <h2 class="text-sm font-semibold text-slate-200 mb-2">detail</h2>
    <div class="prose prose-invert max-w-none text-slate-200">
      <pre class="whitespace-pre-wrap text-sm bg-ink-850/60 border border-white/10 rounded-xl p-4">{{item.detailDescription}}</pre>
    </div>
  </div>
</div>
